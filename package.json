{
  "name": "blog-admin",
  "private": true,
  "version": "0.1.3",
  "description": "Yet another blog admin panel",
  "main": "server/server.mjs",
  "engines": {
    "node": ">=18.12.1 <19",
    "npm": ">=8 <10"
  },
  "scripts": {
    "start": "node server/server.mjs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "watch:server": "nodemon server/server.mjs | pino-pretty -S",
    "watch:client": "vite",
    "watch": "concurrently -n \"SERVER,CLIENT\" -c \"yellow,blue\" \"npm:watch:server\" \"npm:watch:client\"",
    "build": "del ./dist && cross-env NODE_ENV=production tsc && vite build",
    "preview": "vite preview",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i9or/blog-admin.git"
  },
  "keywords": [
    "blog",
    "admin",
    "panel"
  ],
  "author": "Igor <dont@bzzr.me> (https://ignorethis.page/)",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/i9or/blog-admin/issues"
  },
  "homepage": "https://github.com/i9or/blog-admin#readme",
  "devDependencies": {
    "@tanstack/react-query": "4.20.4",
    "@tanstack/react-query-devtools": "4.20.4",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@vitejs/plugin-react": "3.0.0",
    "@vitest/coverage-c8": "0.24.5",
    "autoprefixer": "10.4.13",
    "axios": "1.2.1",
    "clsx": "1.2.1",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "del-cli": "5.0.0",
    "husky": "8.0.2",
    "jsdom": "20.0.3",
    "lint-staged": "13.1.0",
    "nodemon": "2.0.20",
    "pino-pretty": "9.1.1",
    "postcss": "8.4.20",
    "prettier": "2.8.1",
    "prettier-plugin-tailwindcss": "0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.40.0",
    "react-icons": "4.7.1",
    "react-router-dom": "6.4.5",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4",
    "vite": "4.0.1",
    "vitest": "0.25.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@tinyhttp/app": "2.0.26",
    "@tinyhttp/logger": "1.3.0",
    "dotenv": "16.0.3",
    "pino": "8.8.0",
    "pino-http": "8.3.0",
    "sirv": "2.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "files": [
    "dist/**",
    "dist/*/**",
    "npm-shrinkwrap.json",
    "server/**",
    "server/*/**",
    "env.mjs"
  ]
}
